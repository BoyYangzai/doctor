{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": "./",
    "moduleDetection": "auto",
    "esModuleInterop": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "paths": {
      "@doctors/core": ["./packages/core/src/"],
      "@doctors/webtools": ["./packages/doctor-webtools/src/"],
      "@doctors/shared": ["./packages/shared/src/"],
      "@doctors/npmpkg": ["./packages/doctor-npm-pkg/src/"]
    }
  },
  "exclude": ["**/dist/**", "**/node_modules/**", "**/examples/**"]
}
